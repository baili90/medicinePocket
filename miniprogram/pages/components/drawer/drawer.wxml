<!--miniprogram/components/drawer/drawer.wxml-->

		<scroll-view scroll-y class="DrawerPage {{modalName=='viewModal'?'show':''}}">	
			<view class='padding margin text-center'>
				<view class='cu-btn line-green lg block shadow radius switchChapter' bindtap="showModal" data-target="viewModal">
					>
				</view>
			</view>

			<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
				<view class="cu-item">
					{{respiratoryList[index].context}}  				</view>
        <view class="cu-item">
					{{respiratoryList[index].context1}}  				</view>
			</view>
		</scroll-view>
    
		<view class="DrawerClose {{modalName=='viewModal'?'show':''}}" bindtap="hideModal">
			<text class="cuIcon-pullright"></text>
		</view>
		<scroll-view scroll-y class="DrawerWindow {{modalName=='viewModal'?'show':''}}">
			<view class="cu-list menu card-menu margin-top-xl margin-bottom-xl shadow-lg">
				<view class="cu-item arrow" wx:for="{{respiratoryList}}" wx:key="index">
					<view class="content" bindtap="change" data-index='{{item.index}}'>
						<text class="cuIcon-github text-grey"></text>
						<text class="text-grey">{{item.title}}</text>			
					</view>
				</view>
			</view>
	</scroll-view>
